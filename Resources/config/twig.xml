<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="te_translation.twig_extension.class">TE\TranslationBundle\Twig\TETranslationExtension</parameter>
    </parameters>

    <services>
        <service id="te_translations_bundle.twig.te_translation_extension" class="%te_translation.twig_extension.class%">
            <tag name="twig.extension" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
